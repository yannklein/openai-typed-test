<div 
  class="mx-auto w-full flex" 
  data-controller="chat-subscription"
  data-chat-subscription-chat-id-value="<%= @chat.id %>" 
>
  <ul role="list" class="overflow-y-auto max-h-[48vh] flex flex-col-reverse">
    <div class="messages" data-chat-subscription-target="messages">
      <%= render @chat.messages %>
    </div>
  </ul>
  <%= render "messages/form", chat: @chat, message: @message %>
</div>